#include <stdio.h>

int parent[10];

int find(int i) {
    while(parent[i])
        i=parent[i];
    return i;
}

void uni(int i, int j) {
    parent[j]=i;
}

int main() {
    int g[10][10], n, i, j, min, a, b, ne=0;

    printf("Enter number of vertices: ");
    scanf("%d",&n);

    printf("Enter adjacency matrix:\n");
    for(i=0;i<n;i++)
        for(j=0;j<n;j++)
            scanf("%d",&g[i][j]);

    while(ne<n-1) {
        min=999;
        for(i=0;i<n;i++)
            for(j=0;j<n;j++)
                if(g[i][j]<min) {
                    min=g[i][j];
                    a=i; b=j;
                }

        int u=find(a);
        int v=find(b);

        if(u!=v) {
            uni(u,v);
            printf("%d - %d : %d\n",a,b,min);
            ne++;
        }
        g[a][b]=g[b][a]=999;
    }
    return 0;
}



SAMPLE OUTPUT
Enter number of vertices: 5
Enter adjacency matrix:
0 2 0 6 0
2 0 3 8 5
0 3 0 0 7
6 8 0 0 9
0 5 7 9 0
0 - 1 : 2
1 - 2 : 3
1 - 4 : 5
0 - 3 : 6

2 + 3 + 5 + 6 = 16
