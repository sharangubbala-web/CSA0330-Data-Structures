#include <stdio.h>
#define MAX 10
#define INF 999

int main() {
    int g[MAX][MAX], dist[MAX], visited[MAX]={0};
    int n, i, j, src, min, u;

    printf("Enter number of vertices: ");
    scanf("%d",&n);

    printf("Enter adjacency matrix:\n");
    for(i=0;i<n;i++)
        for(j=0;j<n;j++)
            scanf("%d",&g[i][j]);

    printf("Enter source vertex: ");
    scanf("%d",&src);

    for(i=0;i<n;i++)
        dist[i]=INF;
    dist[src]=0;

    for(i=0;i<n;i++) {
        min=INF;
        for(j=0;j<n;j++)
            if(!visited[j] && dist[j]<min) {
                min=dist[j];
                u=j;
            }

        visited[u]=1;

        for(j=0;j<n;j++)
            if(!visited[j] && g[u][j] && dist[u]+g[u][j]<dist[j])
                dist[j]=dist[u]+g[u][j];
    }

    for(i=0;i<n;i++)
        printf("Distance to %d = %d\n",i,dist[i]);
    return 0;
}


SAMPLE OUTPUT 
Enter number of vertices: 5
Enter adjacency matrix:
0 10 0 30 100
10 0 50 0 0
0 50 0 20 10
30 0 20 0 60
100 0 10 60 0
Enter source vertex: 0
Distance to 0 = 0
Distance to 1 = 10
Distance to 2 = 50
Distance to 3 = 30
Distance to 4 = 60
